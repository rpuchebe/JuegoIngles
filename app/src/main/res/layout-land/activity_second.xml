<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.puche.juegoingles2.SecondActivity"
    android:background="@drawable/fondo1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/toolbar2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Usuario"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Option 1 : Learn"
        android:id="@+id/option1"
        android:background="@color/primary"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Option 2 : Try"
        android:id="@+id/option2"
        android:layout_marginTop="20dp"
        android:background="@color/primary"
        android:layout_below="@+id/option1"
        android:layout_alignLeft="@+id/option1"
        android:layout_alignStart="@+id/option1" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Option 3 : Test yourseft"
        android:id="@+id/option3"
        android:background="@color/primary"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/option2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/com_facebook_button_send_icon"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/option1"
        android:layout_toEndOf="@+id/option1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/com_facebook_button_send_icon"
        android:layout_alignTop="@+id/option2"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@drawable/com_facebook_button_send_icon"
        android:layout_alignTop="@+id/option3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/button4"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/profile2"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        app:borderWidth="0dp"
        app:elevation="15dp"
        android:src="@drawable/logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />


</RelativeLayout>
